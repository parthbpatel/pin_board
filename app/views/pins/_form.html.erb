<%= simple_form_for(@pin, local: true) do |form| %>

  <div class="col-md-6 col-md offset-3">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>
  <div class="col-md-6 col-md offset-3">
    <%= form.file_field :image, class: "btn btn-primary" %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
